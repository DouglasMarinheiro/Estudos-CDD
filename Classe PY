6 - def soma(a, b):
    soma=a+b
    return soma
def sub (a, b):
    sub=a-b
    return sub
def mult(a, b):
    mult = a * b
    return mult
def div(a, b):
    div=a/b
    return div


5 - class ingresso():
    def __init__(self,valor):
        self.valor=valor

    def ImprimeValor(self):
        print(f'Valor do Ingresso é : {self.valor}')


class IngressoVip(ingresso):
    def __init__(self,valor):
        super().__init__(valor)

    def ImprimeVip(self):
        print(f'O valor do ingresso Vip é : {self.valor*1.50} ')

