banco = ContaBancaria(1234, "Douglas", "poupança")

banco.ativar()
banco.VerificarLimite()
banco.mudarlimite(1000)
banco.depositar(400)
banco.VerificarSaldo()
banco.sacar(450)
banco.VerificarSaldo()
banco.VerificarLimite()
banco.depositar(100)
banco.VerificarSaldo()
banco.VerificarLimite()

